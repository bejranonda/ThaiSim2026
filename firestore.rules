rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Matches documents in any collection under artifacts/{appId}/public/data/
    // Allow anonymous users to submit simulation results and votes
    match /artifacts/{appId}/public/data/{collectionName}/{docId} {
      // Anonymous users can write (submit results/votes)
      allow write: if request.auth != null &&
                      (collectionName == 'sim_results_v7' || collectionName == 'poll_votes_v7');
      // Anyone can read published data
      allow read: if true;
    }

    // Allow the test connection for deployment verification
    match /test_connection/{docId} {
      allow read: if true;
    }
  }
}